# JaCommander Default Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Security (uncomment to enable authentication)
# ENABLE_AUTH=true
# ADMIN_USER=admin
# ADMIN_PASS=changeme
# JWT_SECRET=your-secret-key-here
# SESSION_TIMEOUT=3600

# Local Storage Paths
# You can define up to 10 local storage paths
LOCAL_STORAGE_1=/data
LOCAL_STORAGE_2=/uploads
LOCAL_STORAGE_3=/downloads

# Amazon S3 Configuration (optional)
# S3_ENABLED=true
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKETS=bucket1,bucket2
# S3_REGION=us-east-1

# Google Drive Configuration (optional)
# GDRIVE_ENABLED=true
# GDRIVE_CLIENT_ID=your-client-id
# GDRIVE_CLIENT_SECRET=your-client-secret
# GDRIVE_REFRESH_TOKEN=your-refresh-token

# Microsoft OneDrive Configuration (optional)
# ONEDRIVE_ENABLED=true
# ONEDRIVE_CLIENT_ID=your-client-id
# ONEDRIVE_CLIENT_SECRET=your-client-secret
# ONEDRIVE_REFRESH_TOKEN=your-refresh-token

# FTP/SFTP Configuration (optional)
# FTP_ENABLED=true
# FTP_SERVERS=server1:21:user:pass,server2:22:user:pass

# WebDAV Configuration (optional)
# WEBDAV_ENABLED=true
# WEBDAV_SERVERS=https://cloud.example.com/dav:user:pass

# Performance Settings
MAX_UPLOAD_SIZE=5368709120  # 5GB in bytes
CHUNK_SIZE=8388608          # 8MB in bytes
WORKER_THREADS=4
CACHE_ENABLED=true
CACHE_SIZE_MB=256

# Logging Configuration
LOG_LEVEL=info              # debug, info, warn, error
LOG_FORMAT=json             # json or text

# Compression Settings
ENABLE_GZIP=true
COMPRESSION_LEVEL=6         # 1-9, higher = better compression but slower