{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug JaCommander",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}",
      "output": "${workspaceFolder}/__debug_bin",
      "args": [],
      "env": {
        "DEBUG": "true",
        "PORT": "8080",
        "HOST": "0.0.0.0",
        "LOCAL_STORAGE_1": "./data",
        "LOCAL_STORAGE_2": "./uploads",
        "LOCAL_STORAGE_3": "./downloads",
        "LOG_LEVEL": "debug"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "JaCommander server starting on",
        "uriFormat": "http://localhost:8080",
        "action": "openExternally"
      }
    },
    {
      "name": "Debug JaCommander (No Browser)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "args": [],
      "env": {
        "DEBUG": "true",
        "PORT": "8080",
        "HOST": "0.0.0.0",
        "LOCAL_STORAGE_1": "./data",
        "LOCAL_STORAGE_2": "./uploads",
        "LOCAL_STORAGE_3": "./downloads",
        "LOG_LEVEL": "debug"
      },
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug JaCommander (Custom Port)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "args": [],
      "env": {
        "DEBUG": "true",
        "PORT": "${input:port}",
        "HOST": "0.0.0.0",
        "LOCAL_STORAGE_1": "./data",
        "LOCAL_STORAGE_2": "./uploads",
        "LOCAL_STORAGE_3": "./downloads",
        "LOG_LEVEL": "debug"
      },
      "showLog": true,
      "trace": "verbose",
      "serverReadyAction": {
        "pattern": "JaCommander server starting on ([0-9\\.]+):([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ],
  "inputs": [
    {
      "id": "port",
      "type": "promptString",
      "description": "Port number",
      "default": "8080"
    }
  ]
}
